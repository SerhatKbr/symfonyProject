{% extends 'adminbase.html.twig' %}

{% block title %}Edit Product Image{% endblock %}

{% block body %}
    <h4>{{ product.title }}</h4>

    <form action="{{ path('product_iupdate',{'id': id}) }}" method="post" enctype="multipart/form-data">




        Select image to upload:
        <input name="productid" value="{{ id }}" type="number" >
        <input type="file" name="imagename" id="fileToUpload">
        <input type="submit" value="Upload Image" name="submit">
    </form>


    {% if product.image != null %}

        <img src="{{ asset('uploads')  }}/images/{{ product.image }}"  >

    {% endif %}


{% endblock %}
