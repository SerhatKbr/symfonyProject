{% extends 'adminbase.html.twig' %}




{% block body %}




<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading" align="center">
            Alt Kategoriler
        </div> <br>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Keywords</th>
                    <th>Description</th>
                    <th>Type</th>
                    <th>Year</th>
                    <th>Detail</th>
                    <th>Image</th>
                    <th>Gallery</th>
                    <th>Category_id</th>
                    <th>Status</th>
                    <th>Güncelle</th>
                    <th>Sil</th>

                </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td>{{ product.title }}</td>
                        <td>{{ product.keywords }}</td>
                        <td>{{ product.description }}</td>
                        <td>{{ product.type }}</td>
                        <td>{{ product.year }}</td>
                        <td>{{ product.detail }}</td>
                        <td>
                            <a href="javascript:openWin('{{ path('product_iedit',{'id':product.id})}}','','toolbar=no,location=no,directories=0,status=no,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=600,height=500');">

                                {% if product.image == null %}
                                    Fotoğraf Ekle
                                {% else %}
                                    <img src="{{ asset('uploads')  }}/images/{{ product.image }}" height="40" width="80">

                                {% endif %}
                            </a>
                        </td>
                        <td>
                            <a href="javascript:openWin('{{ path('image_new',{'pid':product.id})}}','','toolbar=no,location=no,directories=0,status=no,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=1000,height=800');">
                                <img src="{{ asset('images')}}/search.png" height="32">
                            </a>
                        </td>


                        <td>{{ product.categoryId }}</td>

                        <td>{{ product.status }}</td>
                        <td> <a href="{{ path('product_edit', {'id': product.id }) }}" class="btn btn-primary"><i class="icon-pencil icon-white"></i> Güncelle</a></td>
                        <td> <a href="{{ path('product_delete', {'id': product.id }) }}" class="btn btn-primary"><i class="icon-pencil icon-white"></i> Sil</a></td>

                    </tr>
                {% else %}
                    <tr>
                        <td colspan="18">Kayıt Bulunamadı</td>
                    </tr>
                {% endfor %}
                </tbody>


            </table>



            <a href="{{ path('product_new') }}" class="btn btn-primary">Ekle</a>

        </div>

    </div>

    </div>
</div>






{% endblock %}


