{% extends 'adminbase.html.twig' %}

{% block title %}ÜYELER{% endblock %}

{% block body %}
    <div align="center">
    <h1>ÜYELER</h1></div>
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Üyeler
            </div>
            <div class="panel-body">
                <div class="table-responsive">

                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Email</th>
                            <th>Password</th>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Roller</th>
                            <th>Düzenle</th>
                            <th>Sil</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{user.email }}</td>
                                <td>{{ user.password }}</td>
                                <td>{{ user.name }}</td>
                                <td>{{ user.status }}</td>
                                <td>{% for item in user.roles %}
                                     {{ item }}
                                {% endfor %}</td>
                                <td><a href="{{ path('user_edit', {'id': user.id}) }}"class="btn btn-primary"><i class="icon-pencil icon-white"></i> Güncelle</a></td>
                                <td> {{ include('user/_delete_form.html.twig') }} </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="18">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>



                </div>
            </div>
        </div>
    </div>

{% endblock %}
