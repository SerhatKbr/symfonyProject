{% extends 'adminbase.html.twig' %}

{% block body %}

    <div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading"> Gelen Mesajlar </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" name="messages">
                    <thead>
                    <tr>
                         <th>Id</th>
                         <th>Name</th>
                         <th>Email</th>
                         <th>Subject</th>
                         <th>Onay</th>
                         <th>Message</th>
                        <th>Comment</th>
                        <th>Status</th>
                        <th>Show</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                    </thead>
                    <tbody>
        {% for contact_message in contact_messages %}
            <tr>
                <td>{{ contact_message.id }}</td>
                <td>{{ contact_message.name }}</td>
                <td>{{ contact_message.email }}</td>
                <td>{{ contact_message.subject }}</td>
                <td>{{ contact_message.com}}</td>
                <td>{{ contact_message.message }}</td>
                <td>{{ contact_message.comment }}</td>

                <td>{{ contact_message.status }}</td>


                <td><a href="javascript:openWin('{{ path('contact_message_show', {'id': contact_message.id})}}','','toolbar=no,location=no,directories=0,status=no,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=500,height=650');">
                        <button  class="btn btn-primary"><i class="icon-pencil icon-white"></i>Oku</button></a></td>

                <td><a href="{{ path('contact_message_edit', {'id': contact_message.id}) }}"class="btn btn-primary"><i class="icon-pencil icon-white"></i> Güncelle</a></td>
                <td>{{ include('contact_message/_delete_form.html.twig')}}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Mesaj Kutusu Boş</td>
            </tr>
        {% endfor %}
            </tbody>
                </table>

            </div>
            </div>
            </div>
            </div>

{% endblock %}
