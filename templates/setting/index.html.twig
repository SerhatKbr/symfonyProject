{% extends 'adminbase.html.twig' %}

{% block title %}Setting index{% endblock %}

{% block body %}




    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Ayarlar
            </div>
            <div class="panel-body">
                <div class="table-responsive">

                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Keywords</th>
                            <th>Company</th>
                            <th>Address</th>
                            <th>Fax</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Smtpserver</th>
                            <th>Smtpemail</th>
                            <th>Emtppassword</th>
                            <th>Smtpport</th>
                            <th>Aboutus</th>
                            <th>Contact</th>
                            <th>Referances</th>
                            <th>Status</th>
                            <th>Göster</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for setting in settings %}
                            <tr>
                                <td>{{ setting.id }}</td>
                                <td>{{ setting.title }}</td>
                                <td>{{ setting.description }}</td>
                                <td>{{ setting.keywords }}</td>
                                <td>{{ setting.company }}</td>
                                <td>{{ setting.address }}</td>
                                <td>{{ setting.fax }}</td>
                                <td>{{ setting.phone }}</td>
                                <td>{{ setting.email }}</td>
                                <td>{{ setting.smtpserver }}</td>
                                <td>{{ setting.smtpemail }}</td>
                                <td>{{ setting.emtppassword }}</td>
                                <td>{{ setting.smtpport }}</td>
                                <td>{{ setting.aboutus }}</td>
                                <td>{{ setting.contact }}</td>
                                <td>{{ setting.referances }}</td>
                                <td>{{ setting.status }}</td>
                                <td> <a href="{{ path('setting_show', {'id': setting.id }) }}" class="btn btn-primary"><i class="icon-pencil icon-white"></i> Göster</a></td>
                                <td> <a href="{{ path('setting_edit', {'id': setting.id }) }}" class="btn btn-primary"><i class="icon-pencil icon-white"></i> Güncelle</a></td>
                                <td> {{ include('setting/_delete_form.html.twig') }} </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="18">Kayıt Bulunamadı...</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    <a href="{{ path('setting_new') }}" class="btn btn-primary"><i class="icon-pencil icon-white"></i> Ayarlar Ekle</a>

                </div>
            </div>
        </div>
    </div>


{% endblock %}

