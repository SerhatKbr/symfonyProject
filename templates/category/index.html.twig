{% extends 'adminbase.html.twig' %}

{% block title %}Kategoriler{% endblock %}

{% block body %}

    <div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            Kategoriler
        </div>
        <div class="panel-body">
            <div class="table-responsive">

                <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Parentid</th>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Göster</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.parentid }}</td>
                    <td>{{ category.title }}</td>
                    <td>{{ category.description }}</td>
                    <td>{{ category.status }}</td>
                    <td> <a href="{{ path('category_show', {'id': category.id }) }}"  class="btn btn-primary"><i class="icon-pencil icon-white"></i> Göster    </a> </td>
                    <td> <a href="{{ path('category_edit', {'id': category.id , 'pid':category.parentid}) }}" class="btn btn-primary"><i class="icon-pencil icon-white"></i> Güncelle</a></td>
                    <td> {{ include('category/_delete_form.html.twig') }} </td>
                </tr>

            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('category_new') }}"class="btn btn-primary"><i class="icon-pencil icon-white"></i>Kategori Ekle</a>


</div>
        </div>
    </div>
</div>

{% endblock %}



