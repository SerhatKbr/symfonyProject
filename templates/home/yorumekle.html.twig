{% extends 'base.html.twig' %}
{% block title %}HAKKIMIZDA{{ data.title }}{% endblock %}
{% block keywords %}{{ data.keywords }}{% endblock %}
{% block description %}{{ data.description }}{% endblock %}



{% block content %}

         {{ include('messages.html.twig') }}

                    <form action="#"  class="form-actions" name="contact_message" method="post">

                       {% if is_granted('IS_AUTHENTICATED_FULLY') %}

                           <fieldset>

                                <div class="form-group" >
                                    <input type="text" name="blog[name]"  value="{{ app.user.name }}" placeholder="İsim Soyisim" size="101" class="form-control" >
                                </div>

                               <div class="form-group" >
                                   <input type="email" name="blog[email]" value="{{ app.user.email }}"  placeholder="Email" size="102" class="form-control" >
                               </div><br>

                               <div class="form-group">
                                   <label class="control-label "></label>
                                   <textarea id="detailll" name="blog[yorum]"> {{ blog.yorum }}</textarea>
                               </div><br>


                               <input type="hidden" name="token" value="{{ csrf_token('form-message') }}"/>

                               <div align="center">
                                   <a href="{{ path('home') }}" class="btn btn-primary btn-grad" >Ana Ekrana Dön</a>
                                   <input  type="submit"  value="Ekle" class="btn btn-primary btn-lg "/>
                               </div>
                           </fieldset>
                           </form>

                       {% else %}

                           <div class="newsletter">

                           <div align="center">

                               <h1> Merhaba Guest</h1>

                                  <div class="newsletter"> </div>
                                      <p>Ürün satın almak ve tartışmalara katılmak için hemen:</p>
                                      <a href="{{ path('signup') }}" class="btn btn-primary btn-grad" >Kayıt Ol</a>
                                      <a href="{{ path('app_login') }}" class="btn btn-primary btn-grad" >Giriş Yap</a>
                           </div>

                       {% endif %}
                          </div>
{% endblock %}

