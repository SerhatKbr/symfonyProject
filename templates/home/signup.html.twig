{% extends 'base.html.twig' %}
{% block title %}HAKKIMIZDA{{ data.title }}{% endblock %}
{% block keywords %}{{ data.keywords }}{% endblock %}
{% block description %}{{ data.description }}{% endblock %}
{% block sidebar %}  {{ include('home/customsidebar.html.twig') }} {% endblock %}


{% block content %}

         {% if is_granted('IS_AUTHENTICATED_FULLY') %}

             <hr>

                <blockquote>
                  Name =    {{ app.user.name }}
                </blockquote>

             <hr>

               <blockquote>
                E-Mail = {{ app.user.email }}
               </blockquote>

             <hr>

               <blockquote>
                   Roles =
                   {% if app.user.status == "False" %}
                       ADMIN
                   {% elseif app.user.status == "True" %}
                       USER
                   {% endif %}

               </blockquote>

             <hr>

               <blockquote>
                  Status =  {{ app.user.status }}
               </blockquote>

         {% else %}

            <div align="center">
                 <h1> ÜYE FORMU</h1>
            </div>
             <br><br>

              <form action="#" class="form-horizontal" id="block-validate" novalidate="novalidate" method="post">
                   <div class="form-group" >
                       <div align="center">
                            Name :
                              <input type="text" id="required2" value="{{ user.name }}" name="user[name]"  class="form-control" size="58">
                       </div>
                   </div>

                  <div class="form-group">
                      <div align="center">
                           E-Mail:
                             <input type="email" id="email2" value="{{ user.email }}" name="user[email]" class="form-control" size="59">
                      </div>
                  </div>

                  <div class="form-group">
                      <div align="center">
                          Password:
                          <input type="password" id="password2" value="{{ user.password }}" name="user[password]" class="form-control" size="55">
                      </div>
                  </div>
                  <br>

                  <div class="form-group">
                      <div align="center">
                          <input type="checkbox" name="vehicle1" value="Bike">Kullanıcı sözleşmesini okudum ve kabul ediyorum.<br>
                      </div>
                  </div>
                  <br>

                  <div class="form-actions no-margin-bottom" style="text-align:center;">
                      <input type="submit" value="KAYDET" class="btn btn-primary btn-lg ">
                  </div>
                             <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><b<br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>

                  <div class="form-group" align="right">
                      <div class="col-lg-4">
                          <div class="sportformError parentFormpopup-validation formError"  >
                              <select name="user[roles]"  id="sport" class="validate[required] form-control"  >
                                  <option selected >ROLE_USER</option>
                              </select>
                          </div>
                      </div>
                  </div>
              </form>

         {% endif %}


{% endblock %}